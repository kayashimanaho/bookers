<h1>Books</h1>

<% @books.each do |book| %>

  <p>title</p>
   <span>
     <%= link_to book.title, books_path(book.id) %>
   </span>
   
   
  <p>body</p>
   <span>
     <%= link_to book.title, books_path(book.id) %>
   </span>
   
    <%= link_to "Show", books_path %>
    
    <%= link_to "Edit", edit_book_path(book.id) %>
    
    <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>  

<% end %>  

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>